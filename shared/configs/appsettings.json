{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "AllowedHosts": "*",

  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=SmartCommerce;Trusted_Connection=true;MultipleActiveResultSets=true",
    "Redis": "localhost:6379"
  },

  "AzureAd": {
    "Instance": "https://login.microsoftonline.com/",
    "Domain": "your-domain.onmicrosoft.com",
    "TenantId": "your-tenant-id",
    "ClientId": "your-client-id",
    "Audience": "api://your-api-id",
    "Authority": "https://login.microsoftonline.com/your-tenant-id"
  },

  "KeyVault": {
    "Uri": "https://your-keyvault.vault.azure.net/"
  },

  "ServiceBus": {
    "ConnectionString": "@Microsoft.KeyVault(VaultName=your-keyvault;SecretName=ServiceBusConnectionString)",
    "Queues": {
      "OrderEvents": "order-events",
      "PaymentEvents": "payment-events",
      "UserEvents": "user-events",
      "NotificationEvents": "notification-events",
      "InventoryEvents": "inventory-events",
      "SearchEvents": "search-events",
      "FraudEvents": "fraud-events"
    },
    "Topics": {
      "DomainEvents": "domain-events"
    }
  },

  "ApplicationInsights": {
    "ConnectionString": "InstrumentationKey=your-instrumentation-key;IngestionEndpoint=https://eastus-8.in.applicationinsights.azure.com/"
  },

  "Cors": {
    "AllowedOrigins": [
      "http://localhost:3000",
      "https://localhost:3001",
      "https://*.azurewebsites.net",
      "https://*.azurecontainerapps.io"
    ]
  },

  "HealthChecks": {
    "Enabled": true,
    "DetailedErrors": true,
    "Endpoints": {
      "Health": "/health",
      "Ready": "/health/ready",
      "Live": "/health/live"
    }
  },

  "OpenApi": {
    "Title": "SmartCommerce API",
    "Version": "v1",
    "Description": "SmartCommerce microservices API",
    "Contact": {
      "Name": "SmartCommerce Team",
      "Email": "dev@smartcommerce.com"
    },
    "License": {
      "Name": "MIT",
      "Url": "https://opensource.org/licenses/MIT"
    }
  },

  "RateLimiting": {
    "Enabled": true,
    "Global": {
      "PermitLimit": 100,
      "Window": "00:01:00",
      "QueueLimit": 10
    },
    "Api": {
      "PermitLimit": 1000,
      "Window": "00:01:00",
      "QueueLimit": 50
    }
  },

  "Caching": {
    "Redis": {
      "Configuration": "localhost:6379",
      "InstanceName": "SmartCommerce",
      "DefaultExpiration": "00:15:00"
    },
    "Memory": {
      "SizeLimit": 104857600,
      "CompactionPercentage": 0.25
    }
  },

  "Security": {
    "RequireHttps": true,
    "Hsts": {
      "MaxAge": "365.00:00:00",
      "IncludeSubDomains": true,
      "Preload": true
    },
    "ContentSecurityPolicy": {
      "DefaultSrc": "'self'",
      "ScriptSrc": "'self' 'unsafe-inline'",
      "StyleSrc": "'self' 'unsafe-inline'",
      "ImgSrc": "'self' data: https:",
      "ConnectSrc": "'self'",
      "FontSrc": "'self'",
      "ObjectSrc": "'none'",
      "MediaSrc": "'self'",
      "FrameSrc": "'none'"
    }
  },

  "Performance": {
    "ResponseCompression": {
      "Enabled": true,
      "Providers": ["Gzip", "Brotli"]
    },
    "OutputCaching": {
      "Enabled": true,
      "DefaultPolicy": {
        "Duration": 300,
        "VaryByQuery": "*"
      }
    }
  },

  "Monitoring": {
    "Metrics": {
      "Enabled": true,
      "Endpoint": "/metrics"
    },
    "Tracing": {
      "Enabled": true,
      "ServiceName": "SmartCommerce",
      "ServiceVersion": "1.0.0"
    }
  },

  "Features": {
    "EnableSwagger": true,
    "EnableMetrics": true,
    "EnableTracing": true,
    "EnableRateLimiting": true,
    "EnableResponseCompression": true,
    "EnableOutputCaching": true,
    "EnableDetailedErrors": false
  },

  "Business": {
    "DefaultCurrency": "USD",
    "SupportedCurrencies": ["USD", "EUR", "GBP", "CAD"],
    "TaxCalculation": {
      "Enabled": true,
      "DefaultRate": 0.08,
      "ExemptCategories": ["Books", "Food"]
    },
    "Shipping": {
      "FreeShippingThreshold": 50.00,
      "DefaultCarrier": "Standard",
      "ExpressAvailable": true
    },
    "Orders": {
      "MaxItems": 100,
      "MaxValue": 10000.00,
      "CancellationWindow": "24:00:00",
      "AutoCancelAfter": "7.00:00:00"
    },
    "Inventory": {
      "ReserveOnOrder": true,
      "ReservationTimeout": "00:30:00",
      "LowStockThreshold": 10,
      "OutOfStockThreshold": 0
    }
  }
}
# SmartCommerce Environment Configuration Template
# Copy this file to .env and update the values for your environment

# =============================================================================
# Application Settings
# =============================================================================
ENVIRONMENT=development
DEBUG=true
APP_NAME=SmartCommerce
APP_VERSION=1.0.0

# =============================================================================
# Database Configuration
# =============================================================================

# SQL Server (for .NET services)
SQL_SERVER_CONNECTION_STRING=Server=localhost,1433;Database=SmartCommerce;User Id=sa;Password=YourStrong@Passw0rd;TrustServerCertificate=true;

# PostgreSQL (for Python services)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=smartcommerce
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
DATABASE_URL=postgresql://postgres:password@localhost:5432/smartcommerce

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# =============================================================================
# Azure Services Configuration
# =============================================================================

# Azure Subscription
AZURE_SUBSCRIPTION_ID=your-subscription-id
AZURE_TENANT_ID=your-tenant-id
AZURE_RESOURCE_GROUP=smartcommerce-dev-rg

# Azure AD B2C
AZURE_AD_B2C_TENANT=your-tenant.onmicrosoft.com
AZURE_AD_B2C_CLIENT_ID=your-client-id
AZURE_AD_B2C_CLIENT_SECRET=your-client-secret
AZURE_AD_B2C_AUTHORITY=https://your-tenant.b2clogin.com/your-tenant.onmicrosoft.com/B2C_1_signupsignin

# Azure Key Vault
AZURE_KEY_VAULT_URL=https://your-keyvault.vault.azure.net/

# Azure Service Bus
AZURE_SERVICE_BUS_CONNECTION_STRING=Endpoint=sb://your-servicebus.servicebus.windows.net/;SharedAccessKeyName=RootManageSharedAccessKey;SharedAccessKey=your-key

# Azure Storage
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=yourstorageaccount;AccountKey=your-key;EndpointSuffix=core.windows.net

# Application Insights
APPLICATIONINSIGHTS_CONNECTION_STRING=InstrumentationKey=your-key;IngestionEndpoint=https://region.in.applicationinsights.azure.com/
APPLICATIONINSIGHTS_INSTRUMENTATION_KEY=your-instrumentation-key

# =============================================================================
# External Services Configuration
# =============================================================================

# Search Services
ELASTICSEARCH_URL=http://localhost:9200
OPENSEARCH_URL=http://localhost:9200
AZURE_SEARCH_ENDPOINT=https://your-search-service.search.windows.net
AZURE_SEARCH_API_KEY=your-search-api-key

# Machine Learning Models
HUGGINGFACE_API_KEY=your-huggingface-api-key
OPENAI_API_KEY=your-openai-api-key

# Payment Providers
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret

# Email Services
SENDGRID_API_KEY=your-sendgrid-api-key
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-email-password

# SMS Services
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# =============================================================================
# Security Configuration
# =============================================================================

# Encryption Keys
SECRET_KEY=your-very-long-secret-key-for-jwt-signing-at-least-256-bits
ENCRYPTION_KEY=your-32-character-encryption-key-here
JWT_SECRET=your-jwt-secret-key-here

# API Keys
API_KEY_ORDERS=your-internal-api-key-for-orders
API_KEY_CATALOG=your-internal-api-key-for-catalog
API_KEY_PAYMENTS=your-internal-api-key-for-payments

# =============================================================================
# Development Configuration
# =============================================================================

# Service URLs (Development)
ORDER_SERVICE_URL=http://localhost:5000
USER_SERVICE_URL=http://localhost:5001
CATALOG_SERVICE_URL=http://localhost:5002
PAYMENT_SERVICE_URL=http://localhost:5003
NOTIFICATION_SERVICE_URL=http://localhost:5004

# Python Service URLs
RECOMMENDATION_SERVICE_URL=http://localhost:8001
PRICE_OPTIMIZATION_SERVICE_URL=http://localhost:8002
FRAUD_DETECTION_SERVICE_URL=http://localhost:8003
INVENTORY_ANALYTICS_SERVICE_URL=http://localhost:8004
SEARCH_SERVICE_URL=http://localhost:8005

# Frontend URL
FRONTEND_URL=http://localhost:3000

# =============================================================================
# Machine Learning Configuration
# =============================================================================

# Model Settings
SPACY_MODEL=en_core_web_lg
SENTENCE_TRANSFORMER_MODEL=all-MiniLM-L6-v2
HUGGINGFACE_MODEL_CACHE=/tmp/huggingface_models

# ML Service Settings
ENABLE_ML_INFERENCE=true
ENABLE_FRAUD_DETECTION=true
ENABLE_RECOMMENDATIONS=true
ENABLE_PRICE_OPTIMIZATION=true
ENABLE_SEMANTIC_SEARCH=true

# Model Training
MODEL_RETRAIN_INTERVAL=24h
ENABLE_ONLINE_LEARNING=true
MIN_TRAINING_SAMPLES=1000

# =============================================================================
# Monitoring & Observability
# =============================================================================

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
ENABLE_REQUEST_LOGGING=true
ENABLE_PERFORMANCE_LOGGING=true

# Metrics
ENABLE_PROMETHEUS_METRICS=true
METRICS_PORT=9090
METRICS_PATH=/metrics

# Tracing
ENABLE_DISTRIBUTED_TRACING=true
JAEGER_ENDPOINT=http://localhost:14268/api/traces
TRACE_SAMPLE_RATE=0.1

# Health Checks
ENABLE_HEALTH_CHECKS=true
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s

# =============================================================================
# Performance Configuration
# =============================================================================

# Caching
ENABLE_REDIS_CACHING=true
DEFAULT_CACHE_TTL=300
MAX_CACHE_TTL=3600

# Rate Limiting
ENABLE_RATE_LIMITING=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST_SIZE=10

# Circuit Breaker
ENABLE_CIRCUIT_BREAKER=true
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=60s

# Connection Pools
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
REDIS_MAX_CONNECTIONS=50

# =============================================================================
# Business Configuration
# =============================================================================

# Pricing
DEFAULT_CURRENCY=USD
SUPPORTED_CURRENCIES=USD,EUR,GBP,CAD
TAX_RATE=0.08
FREE_SHIPPING_THRESHOLD=50.00

# Inventory
LOW_STOCK_THRESHOLD=10
OUT_OF_STOCK_THRESHOLD=0
INVENTORY_RESERVATION_TIMEOUT=30m

# Orders
MAX_ORDER_ITEMS=100
MAX_ORDER_VALUE=10000.00
ORDER_CANCELLATION_WINDOW=24h
AUTO_CANCEL_AFTER=7d

# Fraud Detection
FRAUD_SCORE_THRESHOLD=0.7
AUTO_BLOCK_THRESHOLD=0.95
MANUAL_REVIEW_THRESHOLD=0.8

# =============================================================================
# Testing Configuration
# =============================================================================

# Test Environment
ENABLE_TEST_MODE=false
USE_MOCK_PAYMENT=false
USE_MOCK_EMAIL=false
USE_MOCK_SMS=false

# Test Data
CLEANUP_TEST_DATA=true
GENERATE_FAKE_DATA=false
FAKE_DATA_COUNT=1000

# Load Testing
LOAD_TEST_USERS=50
LOAD_TEST_DURATION=5m
LOAD_TEST_RAMP_UP=2m

# =============================================================================
# Feature Flags
# =============================================================================

# API Features
ENABLE_SWAGGER=true
ENABLE_CORS=true
ENABLE_COMPRESSION=true
ENABLE_OUTPUT_CACHING=true

# ML Features
ENABLE_PERSONALIZATION=true
ENABLE_SMART_SEARCH=true
ENABLE_DYNAMIC_PRICING=true
ENABLE_INVENTORY_FORECASTING=true

# Notification Features
ENABLE_REAL_TIME_NOTIFICATIONS=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_SMS_NOTIFICATIONS=true
ENABLE_PUSH_NOTIFICATIONS=false

# Security Features
ENABLE_TWO_FACTOR_AUTH=false
ENABLE_CAPTCHA=false
REQUIRE_EMAIL_VERIFICATION=true
ENABLE_SECURITY_HEADERS=true